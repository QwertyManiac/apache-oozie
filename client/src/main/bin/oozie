#!/bin/sh

# resolve links - $0 may be a softlink
PRG="${0}"

while [ -h "${PRG}" ]; do
  ls=`ls -ld "${PRG}"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "${PRG}"`/"$link"
  fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`

OOZIECPPATH=""
for i in "${BASEDIR}/lib/"*.jar; do
  OOZIECPPATH="${OOZIECPPATH}:$i"
done


if test -z ${JAVA_HOME}
then
    JAVA_BIN=java
else
    JAVA_BIN=${JAVA_HOME}/bin/java
fi

JAVA_PROPERTIES=""
OOZIE_OPTIONS=""
for arg in "$@"
do
    if [[ ${arg} =~ ^\-D ]]; then
        PROP=${arg:2}
        PROP2=${PROP//[[:space:]]/""}

        JAVA_PROPERTIES=${JAVA_PROPERTIES}" ""-D"${PROP2}
    else
        OOZIE_OPTIONS=${OOZIE_OPTIONS}" "${arg}
    fi
done
${JAVA_BIN} ${JAVA_PROPERTIES} -cp ${OOZIECPPATH} org.apache.oozie.cli.OozieCLI $EXECCLASS ${OOZIE_OPTIONS}